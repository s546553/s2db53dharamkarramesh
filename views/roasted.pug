extends layout

block content
  h1= title
  p Welcome to the roasted pug
   div(class="container-fluid")
        div(class="row")
            -
                let roasted  = [
                    {
                        "Itemname": "roasted sandwich",
                        "Quantity": 90,
                        "price": "Fifteen USD"
                    },
                    {
                        "Itemname": "roasted chicken ",
                        "Quantity": 73,
                        "price": "nine USD"
                    },
                    {
                        "Itemname": "roasted lamb",
                        "Quantity": 10,
                        "price": "Twenty  USD"
                    },                    
                ]
            each v,index in roasted
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }
 
  
  