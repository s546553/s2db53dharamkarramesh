extends layout

block content
  h1= title
  p Welcome to #{title} JS
  button(type="button", class="btn btn-danger",onclick="moreClaps()") Press Me
 
  div(id = "target")  Clap for me
a(href='/roasted') roasted page link
  script.  
   var clap_count=0;

  
     function moreClaps() {
       clap_count = clap_count+2;
       document.getElementById("target").innerHTML=`Clap ${clap_count} times`;
       
       }
     
 
  
  